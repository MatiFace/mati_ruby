<%= form_with(model: identity, local: true) do |form| %>
  <% if identity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(identity.errors.count, "error") %> prohibited this identity from being saved:</h2>

      <ul>
      <% identity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% if session['mati_auth'] %>
<div class="field">
    <%= form.label :access_token %>
    <%= form.text_area :token, value:  session['mati_access_token'], rows: 5, readonly: true %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, value: session['mati_auth']['payload']['user']['_id'], readonly: true %>
  </div>

  <div class="field">
    <%= form.label :user_name %>
    <%= form.text_field :user_name, :required => true %>
  </div>

  

  <div class="actions">
    <%= form.submit %>
  </div>
  <% else %>
    <%= link_to 'Get Token', get_token_path, target:"_blank" %>
<% end %>
<% end %>
